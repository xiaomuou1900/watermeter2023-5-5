    <script>
        var hiprintTemplate;
        var hiprintTemplate1;
        $(document).ready(function () {
            //初始化打印插件
            hiprint.init();
            //设置左侧拖拽事件
            hiprintTemplate = new hiprint.PrintTemplate({
                template: JSON.parse($('#textarea').val()),
                settingContainer: '#PrintElementOptionSetting'
            });
            //打印设计
            hiprintTemplate.design('#hiprint-printTemplate');


            //设置左侧拖拽事件
            hiprintTemplate1 = new hiprint.PrintTemplate({
                template: JSON.parse($('#textarea1').val()),
                settingContainer: '#PrintElementOptionSetting'
            });
            //打印设计
            hiprintTemplate1.design('#hiprint-printTemplate1');
        });

        //预览
        var preview = function () {
            $('#myModal .modal-body .prevViewDiv').html(hiprintTemplate.getHtml(printData))
            $('#myModal').modal('show')
        }
        var preview1 = function () {
            $('#myModal .modal-body .prevViewDiv').html(hiprintTemplate1.getHtml(printData))
            $('#myModal').modal('show')
        }


        var getTemplateCode = function () {
            $('#textarea').html(JSON.stringify(hiprintTemplate.getJson()))
        }
        var getTemplateHtml = function () {
            $('#textarea_html').val(hiprintTemplate.getHtml(printData)[0].outerHTML)
        }

        //预览
        var jsonPreview = function () {
            var testTemplate = new hiprint.PrintTemplate({ template: JSON.parse($('#textarea').val()) });

            $('#myModal .modal-body .prevViewDiv').html(testTemplate.getHtml(printData))
            $('#myModal').modal('show')

        }
        //直接调用浏览器的打印
        directPrint = function () {
            hiprintTemplate.print(printData);
        }
        //直接调用浏览器的打印
        directPrint1 = function () {
            hiprintTemplate1.print(printData);
        }
       

    </script>

